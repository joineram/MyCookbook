<!DOCTYPE html>
<html>
  <head>
    <title>My Cookbook: <%=item.name%></title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Home</h1></a>
    <dl>
      <dt>Recipe Name</dt>
      <dd><%=item.name%></dd>
      <dt>Cook</dt>
      <dd><a href="/cooks/<%=item.cookname%>"><%=item.cookname%></a></dd>
      <% if (item.image) { %>
      <dt>Image URL</dt>
      <dd><img src="<%=item.image%>" alt="<%=item.image%>"></dd>
      <% } %>
      <dt>Cook Time</dt>
      <dd><%=item.cooktime%></dd>
      <dt>Ingredient</dt>
      <dd><%=item.name%></dd>
      
    </dl>
    <div class="control">
      <h2>Update Recipe</h2>
      <form method="post" action="/candidates/<%=item._id%>">
        <input type="hidden" name="_method" value="put">
        <!-- The line above tells the server to treat this as a PUT request. -->
        <label>Name: 
          <input name="item[name]" value="<%=item.name%>" type="text" required>
        </label>
        <label>Party: 
          <select name="item[party]" required>
            <% related_items.forEach(function(related_item) { %>
            <option value="<%=related_item._id%>"
              <% if (related_item._id === item.party) { %>selected<% } %>>
              <%=related_item.name%>
            </option>
            <% }); %>
          </select>
        </label>
        <label>Image URL:
          <input name="item[image]" value="<%=item.image%>" type="url" size="80"> 
        </label>
        <button>Update</button>
      </form>
    </div>
  </body>
</html>
